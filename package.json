{
    "name": "initial_settings",
    "version": "1.0.0",
    "description": "express+ts+typeorm 초기 세팅",
    "main": "index.js",
    "scripts": {
        "dev": "cross-env PORT=3005 nodemon --watch \"**/*.ts\" --exec \"ts-node\" -r tsconfig-paths/register src/index.ts",
        "build": "tsc && tsc-alias",
        "start": "cross-env NODE_ENV=production ts-node dist/index.js",
        "build:start": "concurrently -c \"red,blue\" \"npm run build\" \"npm run start\""
    },
    "author": "mimiseo",
    "license": "MIT",
    "dependencies": {
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.1",
        "express": "^4.18.2",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.8",
        "tsconfig-paths": "^4.2.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.11.14",
        "concurrently": "^8.2.2",
        "nodemon": "^3.0.3",
        "typescript": "^5.3.3"
    }
}
